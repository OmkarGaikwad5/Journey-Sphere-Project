<style>
  .btn-search{
  border: 1px solid black;
    color: black;
    border-radius: 25px;
    padding: 0 1rem 0 1rem;
  }

  .btn-search:hover{
    background: #fe424d;
    color: #fff;
  }

  #searchBtn i{
    display: inline;
    padding: 0.5rem;
  }

  .search-input{
    border-radius: 25px;
    padding: 0.5rem 3rem 0.5rem 3rem ;
  }
</style>

<nav class="navbar navbar-expand-md bg-body-light border-bottom sticky-top">
    <div class="container-fluid">
      <a class="navbar-brand" href="/listings"><i class="fa-solid fa-compass"></i></a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <div class="navbar-nav">
          <a class="nav-link" href="/listings">Explore</a>
        </div>

        <div class="ms-auto">
          <form class="d-flex navbar-nav " role="search">
            <input class="form-control me-2 search-input" id="inputSearch" type="search" placeholder="Search Destinations" >
            <button onclick="search()"  class="btn btn-search" id="searchBtn" type="submit"><i class="fa-solid fa-magnifying-glass"></i>Search</button>
          </form>
        </div>

        <div class="navbar-nav ms-auto">
          <a class="nav-link" href="/listings/new">Add New Stay</a>
         <% if (!currUser) { %>
          <a class="nav-link " aria-current="page" href="/signup"><b>Sign Up</b></a>
          <a class="nav-link" href="/login"><b>Login</b></a>
        <% } %>
       
        <% if (currUser) { %>
          <a class="nav-link" href="/logout"><b>Logout</b></a>
         <% } %>
        </div>
      </div>
    </div>
  </nav>

  <script>
    let input = document.getElementById('inputSearch');
  
    function search(event) {
        event.preventDefault(); // Prevent form submission
        const inpValue = document.getElementById('inputSearch').value;
        if (inpValue.trim() !== "") {
            window.location.href = "/listings/search/" + encodeURIComponent(inpValue);
        }
    }
  
    document.getElementById("searchBtn").addEventListener("click", search);
  </script>
  